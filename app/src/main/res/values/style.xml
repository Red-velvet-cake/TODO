<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
    ** We will follow this way (Camel case) to name our style files

    <style name="TextStyle"></style>
    <style name="ProfileImageStyle"></style>

    -->


    <style name="HintTextDefaultStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textColorHint">@color/accent_text</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="EditTextDefaultStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
        <item name="android:background">@drawable/selector_edit_text</item>
        <item name="android:drawablePadding">@dimen/_8dp</item>
        <item name="android:padding">@dimen/_16dp</item>
        <item name="android:textAppearance">@style/HintTextDefaultStyle</item>
        <item name="android:drawableTint">@color/secondary_text</item>
    </style>
</resources>