<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:background="@drawable/background_circular"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="@dimen/_328dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:cardElevation="@dimen/_0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_view_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/frame_48095910"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/card_view" />


    <TextView
        android:id="@+id/text_view_avatar"
        android:layout_width="@dimen/_36dp"
        android:layout_height="@dimen/_36dp"
        android:layout_margin="@dimen/_16dp"
        android:background="@drawable/background_circular"
        android:gravity="center"
        android:text="A"
        android:textColor="@color/background"
        app:layout_constraintStart_toStartOf="@id/card_view"
        app:layout_constraintTop_toBottomOf="@id/image_view_icon" />

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/poppins_semibold"
        android:text="Hello,"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/_16dp"
        app:layout_constraintBottom_toBottomOf="@id/text_view_avatar"
        app:layout_constraintStart_toEndOf="@id/text_view_avatar"
        app:layout_constraintTop_toTopOf="@id/text_view_avatar" />

    <ImageButton
        android:id="@+id/button_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/logout_3"
        app:layout_constraintBottom_toBottomOf="@id/card_view"
        app:layout_constraintEnd_toEndOf="@id/card_view"
        app:layout_constraintTop_toBottomOf="@id/text_view_avatar" />


</androidx.constraintlayout.widget.ConstraintLayout>