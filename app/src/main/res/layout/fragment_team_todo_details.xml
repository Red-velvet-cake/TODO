<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        app:title="@string/details"
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:outlineSpotShadowColor="@color/accent"
        android:layout_height="@dimen/_56dp"
        app:layout_constraintTop_toTopOf="parent"
        >
        <com.google.android.material.appbar.MaterialToolbar
            app:navigationIcon="@drawable/ic_left"
            android:layout_width="match_parent"
            app:title="@string/details"
            android:layout_height="match_parent"/>
    </com.google.android.material.appbar.AppBarLayout>




    <TextView
        android:fontFamily="@font/poppins"
        android:id="@+id/name_assigne"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_12dp"
        app:layout_constraintTop_toBottomOf="@id/name_task"
        app:layout_constraintStart_toStartOf="@id/name_task"
        tools:text="Yaseen Zaqut"
        style="@style/TextViewInDetailsTodo"
        android:layout_marginTop="@dimen/_12dp"
         />

    <TextView
        android:id="@+id/name_task"
        android:layout_width="@dimen/_166dp"
        android:layout_height="@dimen/_24dp"
        tools:text="UX UI Studio Meeting"
        android:textSize="@dimen/_16sp"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_24dp"
        android:layout_marginStart="@dimen/_16sp"
        android:textColor="@color/primary_text"
        />

    <ImageView
        android:id="@+id/icon_calender"
        android:layout_width="@dimen/_12dp"
        android:layout_height="@dimen/_12dp"
        android:src="@drawable/ic_calnder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_assigne"
        android:layout_marginTop="@dimen/_18dp"
        android:layout_marginStart="@dimen/_18dp"
        />
    
    <TextView
        android:id="@+id/textview_date"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_12dp"
        tools:text="24-08-2023"
        style="@style/TextViewInDetailsTodo"
        app:layout_constraintStart_toEndOf="@id/icon_calender"
        app:layout_constraintTop_toTopOf="@id/icon_calender"
        />
    
    <ImageView
        android:id="@+id/icon_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_14dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_time"
        android:layout_marginStart="@dimen/_8dp"
        app:layout_constraintStart_toEndOf="@id/textview_date"
        app:layout_constraintTop_toTopOf="@id/textview_date"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_12dp"
        tools:text="21:30"
        style="@style/TextViewInDetailsTodo"
        app:layout_constraintStart_toEndOf="@id/icon_time"
        app:layout_constraintTop_toTopOf="@id/icon_time"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/icon_calender"
        tools:text="@string/details_todos"
        android:paddingHorizontal="@dimen/_16dp"
        android:fontFamily="@font/poppins"
        android:layout_marginVertical="@dimen/_18dp"
        android:textColor="@color/secondary_text"
        />


</androidx.constraintlayout.widget.ConstraintLayout>