<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/_16dp"
    android:layout_marginVertical="@dimen/_4dp"
    app:cardCornerRadius="@dimen/_16dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/personal_todo_card"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        app:cardCornerRadius="@dimen/_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_bar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/card_background">

            <TextView
                android:id="@+id/todo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_16dp"
                android:backgroundTint="@color/card_background"
                android:fontFamily="@font/poppins_medium"
                android:text="UXUI Studio Meeting"
                android:textSize="@dimen/_16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/todo_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_16dp"
                android:backgroundTint="@color/card_background"
                android:fontFamily="@font/poppins"
                android:text="This is my description amet consectetur. Nec sed ut venenatis. Nulla amet amet... "
                android:textSize="@dimen/_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/todo_title" />

            <TextView
                android:id="@+id/todo_assignee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginBottom="@dimen/_16dp"
                android:alpha="0.38"
                android:fontFamily="@font/poppins_medium"
                android:text="Aya Abdelaziz"
                android:textSize="@dimen/_8sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/date_of_creation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_marginBottom="@dimen/_16dp"
                android:alpha="0.38"
                android:drawableStart="@drawable/ic_calnder"
                android:drawablePadding="@dimen/_4dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:text="24-08-2023"
                android:textSize="@dimen/_8sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/time_of_creation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_marginBottom="@dimen/_16dp"
                android:alpha="0.38"
                android:drawableStart="@drawable/ic_time"
                android:drawablePadding="@dimen/_4dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:text="24-08-2023"
                android:textSize="@dimen/_8sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/date_of_creation" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>