<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/dialog_container"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/design_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16dp"
            android:src="@drawable/ic_line" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_16dp"
            android:background="@color/accent" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginBottom="@dimen/_8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/name"
            android:textSize="@dimen/_16dp" />

        <EditText
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_edit_text_default"
            android:hint="@string/_name"
            android:padding="@dimen/_16dp"
            android:textColorHint="@color/accent_text"
            android:textSize="@dimen/_12dp" />

        <TextView
            android:id="@+id/titleCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginBottom="@dimen/_8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/title"
            android:textSize="@dimen/_16dp" />


        <EditText
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_edit_text_default"
            android:hint="@string/task_title"
            android:padding="@dimen/_16dp"
            android:textColorHint="@color/accent_text"
            android:textSize="@dimen/_12dp" />


        <TextView
            android:id="@+id/typeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/type"
            android:textSize="@dimen/_16dp" />


        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/buttonCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:orientation="horizontal">

                <com.google.android.material.chip.Chip
                    android:id="@+id/buttonPersonal"
                    android:layout_width="0dp"
                    android:layout_height="68dp"
                    android:layout_marginStart="@dimen/_4dp"
                    android:text="@string/personalButton"
                    android:textAllCaps="false"
                    android:textColor="@color/primary"
                    app:chipBackgroundColor="@color/background"
                    app:chipCornerRadius="@dimen/_16dp"
                    app:chipIcon="@drawable/ic_person"
                    app:chipIconTint="@color/primary"
                    app:chipStartPadding="44dp"
                    app:chipStrokeColor="@color/primary"
                    app:chipStrokeWidth="1.5dp"
                    app:layout_constraintEnd_toStartOf="@+id/buttonTeam"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/buttonTeam"
                    android:layout_width="0dp"
                    android:layout_height="68dp"
                    android:layout_marginStart="@dimen/_4dp"
                    android:text="@string/teamButton"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/primary"
                    app:chipCornerRadius="@dimen/_16dp"
                    app:chipIcon="@drawable/ic_people"
                    app:chipIconTint="@color/white"
                    app:chipStartPadding="56dp"
                    app:chipStrokeColor="@color/primary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/buttonPersonal"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.chip.ChipGroup>


        <TextView
            android:id="@+id/descriptionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginBottom="@dimen/_8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/_description"
            android:textSize="@dimen/_16dp" />

        <EditText
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_edit_text_default"
            android:gravity="top"
            android:hint="@string/task_description"
            android:padding="@dimen/_16dp"
            android:textColorHint="@color/accent_text"
            android:textSize="@dimen/_12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/buttonCreate"
                android:layout_width="160dp"
                android:layout_height="56dp"
                android:layout_marginStart="@dimen/_4dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:text="@string/_create"
                android:textAllCaps="false" />


        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>